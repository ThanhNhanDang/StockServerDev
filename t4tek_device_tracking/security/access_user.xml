<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="t4tek_device_tracking_group" model="ir.module.category">
        <field name="name">T4TEK Tracking Role</field>
        <field name="sequence">500</field>
    </record>
    <record id="operator" model="res.groups">
        <field name="name">Operator</field>
        <field name="category_id"
            ref="t4tek_device_tracking.t4tek_device_tracking_group" />
    </record>

    <record id="manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id"
            ref="t4tek_device_tracking.t4tek_device_tracking_group" />
        <field name="implied_ids" eval="[
                (4, ref('base.group_user')),
                (4, ref('stock.group_stock_manager')), 
                (4, ref('t4tek_device_tracking.operator')),
                (4, ref('t4tek_device_tracking.card_issue')),
                (4, ref('t4tek_device_tracking.in_stock_user')),
                (4, ref('t4tek_device_tracking.out_stock_user'))]" />
    </record>

    <record id="card_issue" model="res.groups">
        <field name="name">Card Issue</field>
        <field name="category_id"
            ref="t4tek_device_tracking.t4tek_device_tracking_group" />
        <field name="implied_ids" eval="[
                (4, ref('base.group_user')), 
                (4, ref('t4tek_device_tracking.operator'))]" />
    </record>
    <record id="in_stock_user" model="res.groups">
        <field name="name">In Stock User</field>
        <field name="category_id"
            ref="t4tek_device_tracking.t4tek_device_tracking_group" />
        <field name="implied_ids" eval="[
                (4, ref('base.group_user')), 
                (4, ref('stock.group_stock_user')), 
                (4, ref('t4tek_device_tracking.operator'))]" />
    </record>
    <record id="out_stock_user" model="res.groups">
        <field name="name">Out Stock User</field>
        <field name="category_id"
            ref="t4tek_device_tracking.t4tek_device_tracking_group" />
        <field name="implied_ids" eval="[
                (4, ref('base.group_user')), 
                (4, ref('stock.group_stock_user')), 
                (4, ref('t4tek_device_tracking.operator'))]" />
    </record>
  
</odoo>